{% extends 'base.html.twig' %}

{% block title %}Comptes bancaires{% endblock %}

{% block actions %}
    <div class="btn-group" role="group" data-toggle="tooltip" data-placement="bottom" title="Créer opération">
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#createModal">
            <i class="bi bi-plus"></i>
        </button>
    </div>
{% endblock %}

{% block body %}
    {% embed 'pager.html.twig' %}{% endembed %}
    <div class="col-12 table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Nom</th>
                    <th>Solde</th>
                    <th>&nbsp; {# Lien vers opérations #}</th>
                </tr>
            </thead>
            <tbody>
            {% for account in pagination %}
            {# @var \App\Entity\Account account #}
                <tr>
                    <td>
                        <a href="{{ path('account_edit', {'id': account.id}) }}">
                            {{ account.name }}
                        </a>
                    </td>
                    {% if account.balance > 0 %}
                        {% set balanceColorClass = 'text-success' %}
                    {% else %}
                        {% set balanceColorClass = 'text-danger' %}
                    {% endif %}
                    <td class="{{ balanceColorClass }}">
                        {{ account.balance }} €
                    </td>
                    <td>
                        <a href="{{ path('transaction_list', {
                            'account': account.id,
                            'year': 'now' | date('Y'),
                            'month': 'now' | date('m')
                        }) }}">
                            <i class="bi bi-arrow-left-right"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    {% embed 'pager.html.twig' %}{% endembed %}

    {# Modal de création d'opération #}
    {% embed 'modals/generic.html.twig' %}
        {% block modalId %}createModal{% endblock %}
        {% block modalHeader %}
            <h4 class="modal-title">Créer un compte bancaire</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        {% endblock %}
        {% block modalBody %}
            {{ form(newAccountForm) }}
        {% endblock %}
        {% block modalFooter %}
            <button type="button" class="btn btn-light" data-dismiss="modal">
                <i class="bi bi-arrow-left"></i> Retour
            </button>
        {% endblock %}
    {% endembed %}
{% endblock %}