{% extends 'modals/generic.html.twig' %}

{% block modalId %}{% block deleteModalId %}{% endblock %}{% endblock %}

{% block modalHeader %}
    <h4 class="modal-title">{% block deleteModalTitle %}{% endblock %}</h4>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
{% endblock %}

{% block modalBody %}
    {% block deleteModalBody %}{% endblock %}
{% endblock %}

{% block modalFooter %}
    <button type="button" class="btn btn-light" data-dismiss="modal">
        <i class="bi bi-arrow-left"></i> Retour
    </button>
    <a href="{% block deleteModalLink %}{% endblock %}" class="btn btn-danger">
        <i class="bi bi-trash3-fill"></i> Supprimer
    </a>
{% endblock %}