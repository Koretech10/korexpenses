<div class="modal fade" id="{% block deleteModalId %}{% endblock %}">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">{% block deleteModalTitle %}{% endblock %}</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                {% block deleteModalBody %}
                {% endblock %}
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">
                    <i class="bi bi-arrow-left"></i> Retour
                </button>
                <a href="{% block deleteModalLink %}{% endblock %}" class="btn btn-danger">
                    <i class="bi bi-trash3-fill"></i> Supprimer
                </a>
            </div>

        </div>
    </div>
</div>